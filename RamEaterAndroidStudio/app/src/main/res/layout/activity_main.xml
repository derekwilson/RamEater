<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start 1"
        android:id="@+id/btnStart1"
        android:onClick="onClick"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop 1"
        android:id="@+id/btnStop1"
        android:onClick="onClick"
        android:layout_alignBottom="@+id/btnStart1"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start 2"
        android:id="@+id/btnStart2"
        android:onClick="onClick"
        android:layout_below="@+id/btnStart1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop 2"
        android:id="@+id/btnStop2"
        android:onClick="onClick"
        android:layout_alignBottom="@+id/btnStart2"
        android:layout_alignRight="@+id/btnStop1"
        android:layout_alignEnd="@+id/btnStop1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start 3"
        android:id="@+id/btnStart3"
        android:onClick="onClick"
        android:layout_below="@+id/btnStart2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop 3"
        android:id="@+id/btnStop3"
        android:onClick="onClick"
        android:layout_alignBottom="@+id/btnStart3"
        android:layout_alignLeft="@+id/btnStop2"
        android:layout_alignStart="@+id/btnStop2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start 4"
        android:id="@+id/btnStart4"
        android:onClick="onClick"
        android:layout_below="@+id/btnStart3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop 4"
        android:id="@+id/btnStop4"
        android:onClick="onClick"
        android:layout_alignBottom="@+id/btnStart4"
        android:layout_alignLeft="@+id/btnStop3"
        android:layout_alignStart="@+id/btnStop3"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start 5"
        android:id="@+id/btnStart5"
        android:onClick="onClick"
        android:layout_below="@+id/btnStart4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop 5"
        android:id="@+id/btnStop5"
        android:onClick="onClick"
        android:layout_alignBottom="@+id/btnStart5"
        android:layout_alignLeft="@+id/btnStop4"
        android:layout_alignStart="@+id/btnStop4"/>
</RelativeLayout>
